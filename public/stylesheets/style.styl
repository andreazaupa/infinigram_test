$base-value = 3px
$header-height = $base-value * 20
$footer-height = $base-value * 10
$document-width = 100%

$z-index-loading = 5001
$z-index-image-hover = 101
$z-index-foreground = 100

$color-background = #333333
$color-body-text = #dddddd

vendor(prop, args)
	// http://peter.sh/experiments/vendor-prefixed-css-property-overview/
	-webkit-{prop} args
	-moz-{prop} args
	-o-{prop} args
	-ms-{prop} args

no-flickering()
	// http://hamalog.tumblr.com/post/5011193654/ios-css
	vendor("transform", "translate3d(0, 0, 0)");

transform()
	vendor("transform", arguments)

transition()
	no-flickering()
	vendor("transition", arguments)

border-radius()
	vendor("border-radius", arguments)

opacity(n)
	opacity n
	filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

hide-text()
	text-indent -9999px

.clearfix
	zoom 1
	&:before
		content: "\0020";
		display: block;
		height: 0;
		visibility: hidden; 
	&:after
		clear: both;

body
	background-color $color-background
	color $color-body-text
	margin auto
	font-size 75%
	font-family "Segoe UI"

#content
	width 100%
	margin 0 $base-value $footer-height $base-value
	min-height 100%

header
	padding $base-value * 4
	width $document-width
	height $header-height
	h1
		font-family "Bevan", serif
		font-size $base-value * 12
		text-shadow #000000 1px 1px 1px
	div
		display table-cell
		vertical-align middle
	div:first-child
		width 75%
	div:last-child
		width 25%
		form
			width 100%
			text-align right

.container
	div.box
		background-position center center
		background-repeat no-repeat
		background-color lightgray
		margin $base-value
		border solid 1px #ffffff
		// box-sizing border-box
		img
			display block
			transition(0.2s ease-out)
		img.row
			width 148px
			height 148px
		img.standard
			width 198px
			height 198px
		img.thumbnail
			width 98px
			height 98px

footer
	bottom 0
	display block
	position fixed
	width $document-width
	height $footer-height
	padding $base-value
	background-color $color-body-text
	color $color-background
	z-index $z-index-foreground
	.credit
		float left
		display table-cell
		vertical-align middle
	.buttons
		display table-cell
		vertival-align middle

.loading
	background-color #ffffff
	background-image url("/images/throbber.gif")
	background-position center center
	background-repeat no-repeat
	border-radius 3px
	position fixed
	top 16px
	right 16px
	width 48px
	height 48px
	hide-text()
	display none
	opacity 0.8
	no-flickering()

.isotpe
	margin-left auto
	margin-right auto
